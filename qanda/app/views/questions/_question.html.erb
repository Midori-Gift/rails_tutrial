       <h2 class="text-center">New quest</h2>
        <%= form_with model:question, data: {remote: true} do |f| %>

        <div class="form-group">
          <label>Name</label>
            <%= f.text_field :name,class: "form-control text1" %>
        </div>
       <div class="form-group">
          <label>Title</label>
            <%= f.text_field :title,class: "form-control text2" %>
        </div>
        <div class="form-group">
          <label>Content</label>
          <%= f.text_area :content,class: "form-control text3" %>
        </div>
          <%= f.submit "Save", class: "btn btn-primary"%>
      <% end %>
