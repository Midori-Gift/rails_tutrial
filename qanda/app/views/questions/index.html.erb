<div class="container">
   <% if flash[:notice] %>
        <p class="text-success"><%= flash[:notice]%></p>
      <% end %>
      <% if flash[:alert] %>
        <p class="text-danger"><%= flash[:alert] %></p>
      <% end %>
  <h2>Questions</h2>
    <div class="row">
      <div class="col-md-12">
        <div class="table table-striped">
          <table>
            <thead class="thead-light">
              <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Menu</th>
              </tr>
            </thead>
            <tbody>
              <% @questios.each do |question|%>
                <tr>
                  <td><%= question.id %></td>
                  <td><%= question.name %></td>
                  <td><%= question.title %></td>
                  <td><%= question.content %></td>
                  <td> [<%= link_to 'Edit', edit_question_path(question.id) %>] [Delete] </td>
                </tr>
              <% end %>
            </tbody>
          </table>
          <div>
            <%= link_to 'New question', new_question_path %>
          </div>
        </div>
      </div>
    </div>
  </div>