<div class="container">
   <% if flash[:notice] %>
        <p class="text-success"><%= flash[:notice]%></p>
      <% end %>
      <% if flash[:alert] %>
        <p class="text-danger"><%= flash[:alert] %></p>
      <% end %>
  <h2>Questions</h2>
    <div class="row">
      <div class="col-md-2">
        <div id="question">
                 <h2 class="text-center">New quest</h2>
        <%= form_with model:@question, data: {remote: true} do |f| %>

        <div class="form-group">
          <label>Name</label>
            <%= f.text_field :name,class: "form-control", id: "text1" %>
        </div>
       <div class="form-group">
          <label>Title</label>
            <%= f.text_field :title,class: "form-control", id: "text2" %>
        </div>
        <div class="form-group">
          <label>Content</label>
          <%= f.text_area :content,class: "form-control", id: "text3" %>
        </div>
          <%= f.submit "Save", class: "btn btn-primary"%>
      <% end %>
        </div>
      </div>
      <div class="col-md-8 offset-md-1">
        <div class="table table-striped">
          <table>
            <thead class="thead-light">
              <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Menu</th>
              </tr>
            </thead>
            <tbody id="quest_list">
              <%= render 'questions/list', questions: @questions %>
            </tbody>
          </table>
          <div>
            <%= link_to 'New question', new_question_path %>
          </div>
        </div>
      </div>
    </div>
  </div>